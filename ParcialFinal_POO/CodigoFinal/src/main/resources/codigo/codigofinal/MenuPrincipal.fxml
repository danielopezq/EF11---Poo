<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codigo.codigofinal.MenuMainController">

    <ImageView fx:id="backgroundImage" fitHeight="1000" fitWidth="1268" opacity="0.69">
        <image>
            <Image url="@../../Imagenes/logo.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets bottom="20" left="20" right="20" top="100" />
        </padding>
        <Label style="-fx-font-size: 36px; -fx-text-fill: #333;" text="Bienvenido al Banco Nacional de Nlogonia">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <font>
                <Font name="Arial" size="36.0" />
            </font>
        </Label>
        <Label style="-fx-font-size: 24px; -fx-text-fill: #666;" text="Seleccione la opción que desea realizar:">
            <VBox.margin>
                <Insets bottom="100.0" />
            </VBox.margin>
        </Label>
        <Button onAction="#handleCompraOnline" style="-fx-font-size: 24px; -fx-padding: 10 20 10 20; -fx-background-color: #005f6b; -fx-text-fill: white; -fx-border-color: #000000; -fx-border-width: 2; -fx-background-radius: 5;" text="Compra en Línea">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Button>
        <Button onAction="#handleReportes" style="-fx-font-size: 24px; -fx-padding: 10 20 10 20; -fx-background-color: #005f6b; -fx-text-fill: white; -fx-border-color: #000000; -fx-border-width: 2; -fx-background-radius: 5;" text="Reportes">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
        <Button onAction="#handleSalir" style="-fx-font-size: 24px; -fx-padding: 10 20 10 20; -fx-background-color: #FF0000; -fx-text-fill: white; -fx-border-color: #000000; -fx-border-width: 2; -fx-background-radius: 5;" text="Salir">
         <VBox.margin>
            <Insets bottom="200.0" />
         </VBox.margin></Button>
    </VBox>
</StackPane>
